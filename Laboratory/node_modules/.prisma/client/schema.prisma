datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Categoria {
  id_categoria   Int      @id @default(autoincrement())
  nombre         String   @unique @db.VarChar(50)
  descripcion    String?
  activo         Boolean  @default(true)
  fecha_creacion DateTime @default(now())

  productos Producto[]
}

model Marca {
  id_marca       Int      @id @default(autoincrement())
  nombre         String   @unique @db.VarChar(50)
  pais_origen    String?  @db.VarChar(50)
  activo         Boolean  @default(true)
  fecha_creacion DateTime @default(now())

  productos Producto[]
}

model Producto {
  id_producto         Int      @id @default(autoincrement())
  nombre              String   @db.VarChar(100)
  descripcion         String?
  id_categoria        Int
  id_marca            Int?
  precio              Decimal  @db.Decimal(10, 2)
  stock               Int      @default(0)
  stock_minimo        Int      @default(5)
  codigo_barras       String?  @unique @db.VarChar(50)
  sku                 String?  @unique @db.VarChar(50)
  activo              Boolean  @default(true)
  fecha_creacion      DateTime @default(now())
  fecha_actualizacion DateTime @updatedAt

  categoria   Categoria              @relation(fields: [id_categoria], references: [id_categoria])
  marca       Marca?                 @relation(fields: [id_marca], references: [id_marca])
  movimientos MovimientoInventario[]
}

model MovimientoInventario {
  id_movimiento    Int            @id @default(autoincrement())
  id_producto      Int
  tipo_movimiento  TipoMovimiento
  cantidad         Int
  motivo           String?
  usuario          String?        @db.VarChar(50)
  fecha_movimiento DateTime       @default(now())

  producto Producto @relation(fields: [id_producto], references: [id_producto])
}

enum TipoMovimiento {
  ENTRADA
  SALIDA
}
